<% include ../partials/header %>
<link type="stylesheet" href="/stylesheets/register.css"/>
<% include ../partials/navbar %>
<div class="jumbotron">
      <h1 class="display-3"><center>Register</center></h1>
      <form class="ui form" action="/register" method="POST">
          <div class="field">
            <label>First Name</label>
              <div class="field">
                <input type="text" name="register[firstName]" placeholder="Aaron" required>
              </div>
          </div>
          <div class="field">
            <label>Last Name</label>
              <div class="field">
                <input type="text" name="register[lastName]"placeholder="Smith" required>
              </div>
          </div>
          <div class="field">
            <label>Email Address</label>
              <div class="field">
                <input type="text" name="register[emailAddress]" placeholder="example@example.com" required>
              </div>
          </div>
          <div class="field">
            <label>Password</label>
              <div class="field">
                <input type="password" name="register[password]" placeholder="password" required>
              </div>
          </div>
          <div class="field">
            <label>Confirm Password</label>
              <div class="field">
                <input type="password" placeholder="password" required>
              </div>
          </div>
          <div class="text-right">
              <input type="submit" class="btn btn-lg btn-success" value="Proceed to Step 2" >
          </div>
      </form>
    </div>
<% include ../partials/footer %>